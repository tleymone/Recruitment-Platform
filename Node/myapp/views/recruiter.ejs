                            $('#updateJobSheetClose').css('display', 'none');
                            $('#updateJobSheetSubmit').css('display', 'none');
                            $('#updateJobSheetSpinner').css('display', 'block');
                            setTimeout(function () {
                                location.reload();
                            }, 1000); // wait for 3 seconds before reloading the page
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.error(errorThrown);
                            $('#updateJobSheetConfirmationMessage').text('Une erreur est survenue, veuillez réessayer plus tard.');
                        }
                    });
                });
            });
        }

        function generateApplicationHTML(application) {
            var html = '<div class="card mb-3">';
            html += '<div class="card-body">';
            html += '<h5 class="card-title">Candidature n°: ' + application.id + '</h5>';
            html += '<p class="card-text">Candidat: ' + application.lname + ' ' + application.fname + '</p>';

            // Générer des liens pour chaque pièce de l'application
            html += '<p class="card-text">Pieces:';
            application.pieces.forEach(function (piece) {
                var fileLink = '/recruiter/getApplicationsDocument/' + application.id + '/' + encodeURIComponent(piece);
                html += ' <a href="' + fileLink + '">' + piece + '</a>';
            });
            html += '</p>';

            html += '</div></div>';

            return html;
        }

        // SHOW APPLICATIONS
        function showApplicationModal(jobOfferNumber) {

            $('#showApplicationSpinner').css('display', 'block');

            $.ajax({
                url: '/recruiter/getApplicationsData',
                method: 'POST',
                data: { 'jobOfferNumber': jobOfferNumber },
                success: function (applications) {
                    $('#showApplicationSpinner').css('display', 'none');

                    var applicationsContainer = $('#showApplicationContainer');
                    $('#showApplicationContainer').empty();

                    applications.applicationData.forEach(function (application) {
                        var applicationHTML = generateApplicationHTML(application);
                        applicationsContainer.append(applicationHTML);
                    });
                },
                error: function (error) {
                    console.error(error);
                    $('#showApplicationConfirmationMessage').text('Une erreur est survenue, veuillez réessayer plus tard.');
                }
            });

            $('#showApplicationModal').modal('show');
        }

