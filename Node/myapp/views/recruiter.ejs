            $('#updateJobOfferModalTitle').text("Edition de la fiche de poste " + jobOfferNumber + "");
            $('#updateJobOfferEndDate').val(isoDateString);
            let requestedDocumentsList;
            try {
                requestedDocumentsList = JSON.parse(requestedDocuments);
            } catch (error) {
                requestedDocumentsList = []; // set an empty array as the default value
            }
            if (requestedDocumentsList.includes("LM")) {
                $('#updateJobOfferCheckboxLM').prop('checked', true);
            } else {
                $('#updateJobOfferCheckboxLM').prop('checked', false);
            }
            if (requestedDocumentsList.includes("CV")) {
                $('#updateJobOfferCheckboxCV').prop('checked', true);
            } else {
                $('#updateJobOfferCheckboxCV').prop('checked', false);
            }
            if (requestedDocumentsList.includes("CNI")) {
                $('#updateJobOfferCheckboxCNI').prop('checked', true);
            } else {
                $('#updateJobOfferCheckboxCNI').prop('checked', false);
            }
